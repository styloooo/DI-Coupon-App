extends layout

block content
  if message.error
    div(class="alert alert-danger")= message.error
  if message.loginMessage
    div(class="alert alert-danger")= message.loginMessage

  .col-md-4.col-md-offset-4
    h2 Log in
    div
      form(action="/login", method="POST")
        p
          input.form-control(name="email", type="text", placeholder="coupon-app@signup.app")
        p
          input.form-control(name="password", type="password", placeholder="******")
        p
          input.btn.btn-lg.btn-primary.btn-block(type="submit",value="Log in")
      a(href='/auth/facebook') Login via Facebook