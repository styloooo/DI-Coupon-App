extends layout

block content
  if message.error
    div(class="alert alert-danger")= message.error
  if message.emailTaken
    div(class="alert alert-danger")= message.emailTaken
  if(userCreated)
    div(class="alert alert-success") Congratulations!
  .col-md-4.col-md-offset-4
    h2 Sign Up
    div= error
    div
      form(action="/signup", method="POST")
        p
          input.form-control(name="email", type="text", placeholder="coupon-app@signup.app")
        p
          input.form-control(name="password", type="password", placeholder="******")
        p
          input.btn.btn-lg.btn-primary.btn-block(type="submit",value="Sign up")
    a(href='/auth/facebook') Login via Facebook